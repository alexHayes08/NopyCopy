                        </Grid.ColumnDefinitions>
                        <StackPanel x:Name="StackPanel_AddAndDeleteFileExtBtnsContainer" Orientation="Horizontal" Grid.Column="1">
                            <Button x:Name="Button_AddItem" Content="Add Item" Width="Auto" Padding="5" Margin="5" Click="Button_AddItem_Click" ToolTip="Add an item to the list of tracked file extensions."/>
                            <Button x:Name="Button_DeleteItems" Content="Delete Item(s)" Width="Auto" Padding="5" Margin="5" Click="Button_DeleteItems_Click" ToolTip="Remove all selected items from the list of tracked filed extensions."/>
                        </StackPanel>
                    </Grid>
                    <DockPanel x:Name="DockPanel_NewExtensionContainer"  Grid.Row="3" Visibility="Collapsed">
                        <DockPanel DockPanel.Dock="Top">
                            <Label x:Name="Label_newExtension">Enter New Extension:</Label>
                            <TextBox x:Name="TextBox_newExtension" Margin="4" AutoWordSelection="False">
                                <TextBox.ToolTip>
                                    IE: .js, .json, .html, etc...
                                </TextBox.ToolTip>
                            </TextBox>
                        </DockPanel>
                        <Grid DockPanel.Dock="Bottom">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="Button_confirmNewExtension" Background="#FF40A63A" Foreground="White" Click="Button_confirmNewExtension_Click">Confirm</Button>
                            <Button x:Name="Button_cancelNewExtension" Grid.Column="1" Background="#FFE14A2F" Foreground="White" Click="Button_cancelNewExtension_Click">Cancel</Button>
                        </Grid>
                    </DockPanel>
                    <ListView x:Name="ListView_WatchedFileExtensions" Grid.Row="4" IsTextSearchEnabled="False"/>
