<UserControl x:Class="NopyCopyV2.Xaml.OptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NopyCopyV2.Xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CheckBox Content="Is Enabled" IsChecked="{Binding Path=IsEnabled}"/>
        <!--<RadioButton Content="Is Whitelist" IsChecked="{Binding Path=IsWhiteList}"/>
        <RadioButton Content="Is Blacklist" IsChecked="{Binding Path=!IsWhiteList}"/>-->
        <DockPanel Grid.Row="1">
            <Label Content="Listed File Extensions" DockPanel.Dock="Top"/>
            <ListBox ItemsSource="{Binding Path=ListedFileExtensions}" DockPanel.Dock="Top"/>
        </DockPanel>
        <DockPanel Grid.Row="2">
            <Label Content="Overrides" DockPanel.Dock="Top"/>
            <!--<ListBox ItemsSource="{Binding Path=Overrides}" DockPanel.Dock="Top"/>-->
        </DockPanel>
    </Grid>
</UserControl>
